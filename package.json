{
  "name": "ts-react-boilerplate",
  "description": "A universal boilerplate for building web applications w/ TypeScript, React, Redux and more.",
  "main": "build/server.js",
  "config": {
    "validate-commit-msg": {
      "types": [
        "build",
        "chore",
        "ci",
        "cleanup",
        "docs",
        "feat",
        "fix",
        "followup",
        "improve",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "unfeat"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "prepush": "npm run build && npm run build:prod && npm run test:no-cache",
    "commitmsg": "validate-commit-msg",
    "clean": "rimraf build && rimraf .jest/cache",
    "prebuild": "npm run clean -s",
    "build": "webpack --config config/webpack/index.js",
    "build:prod": "cross-env NODE_ENV=production npm run build && node ./config/utils/replaceWithProdScripts",
    "postbuild": "webpack --config config/webpack/server.js",
    "prestart": "npm run build -s",
    "start": "node build/server.js",
    "start:prod": "npm run build:prod && cross-env NODE_ENV=production node build/server.js",
    "test": "jest",
    "test:no-cache": "jest --no-cache",
    "test:watch": "jest --watch",
    "lint": "tslint -t stylish --project tsconfig.json \"src/**/**.ts*\" -e \"src/**/**.snap\"",
    "lint:fix": "npm run lint -s -- --fix",
    "doc": "styleguidist server --config styleguide.config.js"
  },
  "author": "Crazy Factory <dev@crazy-factory.com>",
  "homepage": "https://github.com/crazyfactory/ts-react-boilerplate.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/crazyfactory/ts-react-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/crazyfactory/ts-react-boilerplate/issues"
  },
  "keywords": [
    "react",
    "redux",
    "typescript",
    "webpack",
    "universal",
    "isomorphic",
    "starter",
    "kit",
    "boilerplate",
    "hot reload",
    "react-hot-loader",
    "enzyme",
    "jest"
  ],
  "license": "MIT",
  "devDependencies": {
    "@crazyfactory/tslint-rules": "^1.6.1",
    "@types/enzyme": "^3.1.18",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.6",
    "@types/node": "^12.0.0",
    "@types/prop-types": "^15.5.9",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.2",
    "@types/react-helmet": "^5.0.8",
    "@types/react-redux": "^7.0.1",
    "@types/serialize-javascript": "^1.5.0",
    "babel-core": "^6.26.3",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "file-loader": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-enzyme": "^7.0.1",
    "mini-html-webpack-plugin": "^0.2.3",
    "react-docgen-typescript": "^1.12.3",
    "react-hot-loader": "^4.7.0",
    "react-styleguidist": "^8.0.6",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "ts-loader": "^6.0.4",
    "tslint": "^5.12.1",
    "tslint-loader": "^3.5.4",
    "tslint-microsoft-contrib": "^6.0.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.3.3",
    "url-loader": "^1.1.2",
    "validate-commit-msg": "^2.14.0",
    "wallaby-webpack": "^3.9.13",
    "webpack": "^4.29.5",
    "webpack-bundle-analyzer": "^3.0.4",
    "webpack-cli": "^3.2.3",
    "webpack-dev-middleware": "^3.5.2",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-manifest-plugin": "^2.0.4"
  },
  "dependencies": {
    "@sentry/browser": "^5.0.0",
    "autobind-decorator": "^2.4.0",
    "chalk": "^2.4.2",
    "es6-promise": "^4.2.6",
    "express": "^4.16.4",
    "isomorphic-fetch": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-helmet": "^5.2.0",
    "react-redux": "^6.0.1",
    "react-router5": "^6.5.3",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-router5": "^6.0.5",
    "redux-saga": "^1.0.1",
    "reselect": "^4.0.0",
    "router5": "^6.6.3",
    "serialize-javascript": "^1.6.1",
    "serve-favicon": "^2.5.0",
    "typesafe-actions": "^4.0.0",
    "typestyle": "^2.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "cacheDirectory": "<rootDir>/.jest/cache",
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "setupFilesAfterEnv": [
      "./src/app/helpers/JestBootstrap.ts"
    ]
  }
}
