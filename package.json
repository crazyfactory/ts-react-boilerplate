{
  "name": "ts-react-boilerplate",
  "description": "A universal boilerplate for building web applications w/ TypeScript, React, Redux and more.",
  "main": "build/server.js",
  "scripts": {
    "precommit": "npm run lint",
    "prepush": "npm run build && npm run build:prod && npm run test:no-cache",
    "commitmsg": "validate-commit-msg",
    "clean": "rimraf build && rimraf .jest/cache",
    "prebuild": "npm run clean -s",
    "build": "webpack --config config/webpack/index.js",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "postbuild": "webpack --config config/webpack/server.js",
    "prestart": "npm run build -s",
    "start": "node build/server.js",
    "start:prod": "cross-env NODE_ENV=production npm start",
    "test": "jest",
    "test:no-cache": "jest --no-cache",
    "test:watch": "jest --watch",
    "lint": "tslint -t stylish \"src/**/**.ts*\" -e \"src/**/**.snap\"",
    "lint:fix": "npm run lint -s -- --fix"
  },
  "author": "Crazy Factory <dev@crazy-factory.com>",
  "homepage": "https://github.com/crazyfactory/ts-react-boilerplate.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/crazyfactory/ts-react-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/crazyfactory/ts-react-boilerplate/issues"
  },
  "keywords": [
    "react",
    "redux",
    "typescript",
    "webpack",
    "universal",
    "isomorphic",
    "starter",
    "kit",
    "boilerplate",
    "hot reload",
    "react-hot-loader",
    "enzyme",
    "jest"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/base16": "^1.0.1",
    "@types/enzyme": "^2.8.1",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/jest": "^19.2.3",
    "@types/node": "^8.0.2",
    "@types/raven-js": "^3.10.0",
    "@types/react": "^15.0.31",
    "@types/react-addons-test-utils": "^0.14.19",
    "@types/react-dom": "^15.5.1",
    "@types/react-helmet": "^5.0.3",
    "@types/react-intl": "^2.3.0",
    "@types/react-redux": "^4.4.45",
    "@types/react-router": "^3.0.12",
    "@types/react-router-redux": "^4.0.4",
    "@types/redux": "^3.6.31",
    "@types/redux-devtools": "^3.0.38",
    "@types/redux-devtools-dock-monitor": "^1.1.31",
    "@types/redux-devtools-log-monitor": "^1.0.31",
    "@types/redux-form": "^6.6.3",
    "@types/webpack": "^3.0.0",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "babel-core": "^6.22.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.22.0",
    "cross-env": "^5.0.1",
    "enzyme": "^2.9.1",
    "file-loader": "^0.11.1",
    "husky": "^0.14.0",
    "jest": "^20.0.3",
    "jest-enzyme": "3.2.0",
    "react-addons-test-utils": "~15.5.1",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.5.4",
    "ts-jest": "^20.0.4",
    "tslint": "^4.3.1",
    "tslint-loader": "^3.3.0",
    "tslint-microsoft-contrib": "^4.0.1",
    "tslint-react": "^3.0.0",
    "typescript": "^2.4.0",
    "url-loader": "^0.5.7",
    "validate-commit-msg": "^2.12.1",
    "wallaby-webpack": "0.0.38",
    "webpack": "^2.3.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-dev-server": "^2.2.0",
    "webpack-hot-middleware": "^2.15.0",
    "webpack-manifest-plugin": "^1.1.0"
  },
  "dependencies": {
    "chalk": "^2.0.1",
    "csstips": "^0.2.2",
    "csx": "^8.2.1",
    "es6-promise": "^4.0.5",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1",
    "raven-for-redux": "^1.0.0",
    "raven-js": "^3.16.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.0.2",
    "react-intl": "^2.3.0",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-form": "^6.8.0",
    "redux-logger": "^3.0.0",
    "redux-saga": "^0.15.4",
    "serve-favicon": "^2.3.2",
    "typestyle": "^1.0.0"
  },
  "jest": {
    "mapCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "cacheDirectory": "<rootDir>/.jest/cache",
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js"
  }
}
